            .card-header-wrapper
              %h1 Card title
              %p Card content
          - 4.times do |indexCascade|
            .card.zoomable{id: "card-#{index}-#{indexCascade}"}
              .zoomable-content
                .fake-paragraphs= lorem.paragraphs 3
              %a.card-link.zoomable-anchor{href: "/card-#{index}-#{indexCascade}"}
        %a.card-link.zoomable-anchor{href: "/card-#{index}"}


